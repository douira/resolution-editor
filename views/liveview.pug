extends layout

block styles
  +static("css", "/css/liveviewStyle.css")
  +static("css", "/css/liveviewColors.css")

block content
  .container
    +icon(icons.liveview, "large left " + colors.liveview)
    h3#lv-title Resolution LiveView
    a.right(href="/help#liveview") Help Page Section for LiveView
    h5.light#token-preset=token
    #code-preset.hide-this=code
    ul.collection.hide-this#last-amd
      each i in [1, 2, 3]
        li.collection-item
          span.item-age.grey-text.right ? minutes (ago)
          | Proposal by #[span.item-sponsor Submitter] to #[span.underline #[span.item-action action] OC#[span.item-clause ?]]: #[b.item-status Accepted/Rejected]
    .z-depth-2#viewcontent
      #no-content-msg.hide-this
        h5 No content received
        p Start a LiveView session by opening the editor with sufficient permissions at stage 6. If this page doesn't receive any updates although you started the session in the editor, reload both pages and if the problem persists contact IT-Management.
      .center#spinner-wrapper
        +spinner("blue", "small")
      #resolution.hide-this
        #amd-container.hide-this
          h5#amd-text Proposal by #[span.amd-sponsor] to #[span.underline #[span.amd-action-text] #[span.amd-target]]:
        #address
          mixin info-piece(type)
            .row
              .col.s4.l3: p=type.toUpperCase() + ":"
              .col.s8.l9: block
          +info-piece("Forum")
            p.forum-info ?
          +info-piece("Question Of")
            p#question-of-info ?
          +info-piece("Sponsor")
            p#sponsor-info ?
          .row.hide-this#co-sponsor-row
            .col.s4.l3: p CO-SPONSORS:
            .col.s8.l9: p#co-sponsor-info
          p#address-line The #[span.forum-info ?],
        .clause-content#clause-content-template
          span.main-content
        #clauses
          #preamb-clauses
          ol#op-clauses
    br
  div.fixed-action-btn
    a.btn-floating.btn-large#enter-fullscreen(class=pri)&attributes(tooltip("Enter Fullscreen mode", "left"))
      +icon("fullscreen", "mediumsmall-i")
block scripts
  +static("js", "/js/scrollintoview.js")
  +static("js", "/js/dialogs.js")
  +static("js", "/js/liveviewWS.js")
  +static("js", "/js/getTimeText.js")
  +static("js", "/js/liveviewInit.js")
